@using Modelo.Entidades
@model Calificacion
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>NUEVA CALIFICACION</h1>
<p>Formulario para la creacion de una nueva calificacion en el sistema SCP</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear nueva calificacion</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="control-label">Detalle de Postulacion</label>
                    <input class="form-control" asp-for="Postulacion_DetId" />
                </div>
                <div class="form-group">
                    <label class="control-label">Nota 1</label>
                    <input class="form-control" asp-for="Nota1" />
                </div>
                <div class="form-group">
                    <label class="control-label">Nota 2</label>
                    <input class="form-control" asp-for="Nota2" />
                </div>
                <div class="form-group">
                    <label class="control-label">Nota 3</label>
                    <input class="form-control" asp-for="Nota3" />
                </div>
                <div class="form-group">
                    <label class="control-label">Nota 4</label>
                    <input class="form-control" asp-for="Nota4" />
                </div>
                <div class="form-group">
                    <label class="control-label">Nota 5</label>
                    <input class="form-control" asp-for="Nota5" />
                </div>
                <div class="form-group">
                    <label class="control-label">Nota 6</label>
                    <input class="form-control" asp-for="Nota6" />
                </div>
                <div class="form-group">
                    <label class="control-label">Nota 7</label>
                    <input class="form-control" asp-for="Nota7" />
                </div>


                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Crear la calificacion" />
                </div>
            </form>
        </div>

    </div>
</div>

