@using Modelo.Entidades
@model Clasificacion
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>NUEVA CLASIFICACION</h1>
<p>Formulario para la creacion de una nueva clasificacion en el sistema SCP</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear nueva clasificacion</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="control-label">Marca</label>
                    <input class="form-control" asp-for="MarcaId" />
                </div>
                <div class="form-group">
                    <label class="control-label">Producto</label>
                    <input class="form-control" asp-for="ProductoId" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Crear la clasificacion" />
                </div>
            </form>
        </div>

    </div>
</div>

