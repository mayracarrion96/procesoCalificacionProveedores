@using Modelo.Entidades
@model Configuracion
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>NUEVA CONFIGURACION</h1>
<p>Formulario para la creacion de una nueva configuracion en el sistema SCP</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear nueva configuracion</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="control-label">Nota Minima</label>
                    <input class="form-control" asp-for="NotaMinima" />
                </div>
                <div class="form-group">
                    <label class="control-label">Peso Nota 1</label>
                    <input class="form-control" asp-for="PesoNota1" />
                </div>
                <div class="form-group">
                    <label class="control-label">Peso Nota 2</label>
                    <input class="form-control" asp-for="PesoNota2" />
                </div>
                <div class="form-group">
                    <label class="control-label">Peso Nota 2</label>
                    <input class="form-control" asp-for="PesoNota2" />
                </div>
                <div class="form-group">
                    <label class="control-label">Peso Nota 3</label>
                    <input class="form-control" asp-for="PesoNota3" />
                </div>
                <div class="form-group">
                    <label class="control-label">Peso Nota 4</label>
                    <input class="form-control" asp-for="PesoNota4" />
                </div>
                <div class="form-group">
                    <label class="control-label">Peso Nota 5</label>
                    <input class="form-control" asp-for="PesoNota5" />
                </div>
                <div class="form-group">
                    <label class="control-label">Peso Nota 6</label>
                    <input class="form-control" asp-for="PesoNota6" />
                </div>
                <div class="form-group">
                    <label class="control-label">Peso Nota 7</label>
                    <input class="form-control" asp-for="PesoNota7" />
                </div>
                <div class="form-group">
                    <label class="control-label">Periodo</label>
                    <input class="form-control" asp-for="PeriodoVigenteId" />
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Crear la configuracion" />
                </div>
            </form>
        </div>

    </div>
</div>

