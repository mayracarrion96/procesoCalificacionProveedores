@using Modelo.Entidades
@model Configuracion
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ELIMINAR configuracion</h1>
<p>Formulario para borrar una configuracion en el sistema SCP</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Seguro que desea eliminar la configuracion: @Model.ConfiguracionId</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Delete">
                <input type="hidden" asp-for="ConfiguracionId" />

                <div class="form-group">
                    <label class="control-label">Nota Minima</label>
                    <input class="form-control" asp-for="NotaMinima" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Peso Nota 1</label>
                    <input class="form-control" asp-for="PesoNota1" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Peso Nota 2</label>
                    <input class="form-control" asp-for="PesoNota2" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Peso Nota 2</label>
                    <input class="form-control" asp-for="PesoNota2" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Peso Nota 3</label>
                    <input class="form-control" asp-for="PesoNota3" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Peso Nota 4</label>
                    <input class="form-control" asp-for="PesoNota4" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Peso Nota 5</label>
                    <input class="form-control" asp-for="PesoNota5" disabled />
                </div>
                <div class="form-group">
                    <label class="control-label">Peso Nota 6</label>
                    <input class="form-control" asp-for="PesoNota6" disabled/>
                </div>
                <div class="form-group">
                    <label class="control-label">Peso Nota 7</label>
                    <input class="form-control" asp-for="PesoNota7" disabled />
                </div>
                <div class="form-group">
                    <label class="control-label">Periodo</label>
                    <input class="form-control" asp-for="PeriodoVigenteId" disabled />
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Eliminar la configuracion" />
                </div>
            </form>
        </div>

    </div>
</div>

