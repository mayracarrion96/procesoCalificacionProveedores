@using Modelo.Entidades
@model Marca
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EDICION DE MARCA</h1>
<p>Formulario para editar marca en el sistema SCP</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Usted esta actualizando la marca: @Model.MarcaId</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="MarcaId" />

                <div class="form-group">
                    <label class="control-label">Nombre</label>
                    <input class="form-control" asp-for="Nombre" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Actualizar la marca" />
                </div>
            </form>
        </div>

    </div>
</div>

