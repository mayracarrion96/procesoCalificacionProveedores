@using Modelo.Entidades;
@model IEnumerable<Oferta_Det>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DETALLES DE OFERTAS</h1>
<p>Se presenta a continuación la lista de los detalles de ofertas registradas en el sistema SCP</p>

<div class="container">
    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true">
                    &times;
                </span>
            </button>
        </div>
    }
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de detalles de ofertas</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block"
               asp-controller="OfertaDet" asp-action="Create">
                Crear nueva detalle de oferta
            </a>
        </div>
    </div>

    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Oferta</td>
                    <td>Producto</td>
                    <td>Precio</td>
                    <td>Lote minimo</td>
                    <td>Descuento</td>
                    <td>Garantia</td>
                    <td>Tiempo de entrega</td>

                </tr>
            </thead>
            <tbody>
                @foreach (Oferta_Det ofertaDet in Model)
                {
                <tr>
                    <td>@ofertaDet.Oferta_DetId</td>
                    <td>@ofertaDet.Oferta.Nombre</td>
                    <td>@ofertaDet.Producto.Nombre</td>
                    <td>@ofertaDet.Precio</td>
                    <td>@ofertaDet.LoteMinimo</td>
                    <td>@ofertaDet.Descuento</td>
                    <td>@ofertaDet.Garantia</td>
                    <td>@ofertaDet.TiempoEntrega</td>
                    <td>
                        <a class="btn btn-warning"
                           asp-controller="OfertaDet" asp-action="Edit" asp-route-id="@ofertaDet.Oferta_DetId">
                            Editar
                        </a>
                        <a class="btn btn-danger"
                           asp-controller="OfertaDet" asp-action="Delete" asp-route-id="@ofertaDet.Oferta_DetId">
                            Borrar
                        </a>
                    </td>
                </tr>
                }

            </tbody>
        </table>

    </div>
</div>


