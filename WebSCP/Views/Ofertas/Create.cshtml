@using Modelo.Entidades
@model Oferta
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>NUEVA OFERTA</h1>
<p>Formulario para la creacion de una nueva oferta en el sistema SCP</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear nueva oferta</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="control-label">Score Buro</label>
                    <input class="form-control" asp-for="ScoreBuro" />
                </div>
                <div class="form-group">
                    <label class="control-label">Periodo-Estado</label>
                    <input class="form-control" asp-for="PeriodoId" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Crear la oferta" />
                </div>
            </form>
        </div>

    </div>
</div>