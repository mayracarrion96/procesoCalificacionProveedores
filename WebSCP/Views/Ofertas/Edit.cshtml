@using Modelo.Entidades
@model Oferta
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>EDICION DE OFERTA</h1>
<p>Formulario para editar oferta en el sistema SCP</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Usted esta actualizando la oferta: @Model.OfertaId</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="OfertaId" />

                <div class="form-group">
                    <label class="control-label">Score Buro</label>
                    <input class="form-control" asp-for="ScoreBuro" />
                </div>
                <div class="form-group">
                    <label class="control-label">Periodo</label>
                    <input class="form-control" asp-for="PeriodoId" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Actualizar la oferta" />
                </div>
            </form>
        </div>

    </div>
</div>