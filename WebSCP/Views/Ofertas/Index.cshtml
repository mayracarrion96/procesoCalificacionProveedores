@using Modelo.Entidades
@model IEnumerable<Oferta>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>OFERTAS</h1>
<p>Se presenta a continuación la lista de las ofertas registradas en el sistema SCP</p>

<div class="container">
    @if (TempData["mensaje"] != null)
     {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true">
                    &times;
                </span>
            </button>
        </div>           
     }
    

    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de ofertas</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block"
               asp-controller="Ofertas" asp-action="Create">
               Crear nueva oferta
            </a>
        </div>
    </div>

    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Nombre</td>
                    <td>Score Buro</td>
                    <td>Periodo</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Oferta oferta in Model)
                 {
                <tr>
                    <td>@oferta.OfertaId</td>
                    <td>@oferta.Nombre</td>
                    <td>@oferta.ScoreBuro</td>
                    <td>@oferta.Periodo.Nombre</td>
                    <td>
                        <a class="btn btn-warning"
                           asp-controller="Ofertas" asp-action="Edit" asp-route-id="@oferta.OfertaId">
                            Editar
                        </a>
                        <a class="btn btn-danger"
                           asp-controller="Ofertas" asp-action="Delete" asp-route-id="@oferta.OfertaId">
                            Borrar
                        </a>
                    </td>
                </tr>
                 }
                
            </tbody>
        </table>

    </div>
</div>
