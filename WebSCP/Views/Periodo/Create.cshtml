@using Modelo.Entidades
@model Periodo
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>NUEVO PERIODO</h1>
<p>Formulario para la creacion de un nuevo periodo en el sistema SCP</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear nuevo periodo</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="control-label">Estado</label>
                    <input class="form-control" asp-for="Estado" />
                </div>
                <div class="form-group">
                    <label class="control-label">Fecha inicio</label>
                    <input class="form-control" asp-for="FechaInicio" />
                </div>
                <div class="form-group">
                    <label class="control-label">Fecha fin</label>
                    <input class="form-control" asp-for="FechaFin" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Crear el periodo" />
                </div>
            </form>
        </div>

    </div>
</div>

