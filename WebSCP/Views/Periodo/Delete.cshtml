@using Modelo.Entidades
@model Periodo
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ELIMINAR PERIODO</h1>
<p>Formulario para borrar un periodo en el sistema SCP</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Seguro que desea eliminar el periodo: @Model.PeriodoId</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Delete">
                <div class="form-group">

                    <input type="hidden" asp-for="PeriodoId" />

                    <div class="form-group">
                        <label class="control-label">Nombre</label>
                        <input class="form-control" asp-for="Nombre" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Estado</label>
                        <input class="form-control" asp-for="Estado" disabled />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Fecha inicio</label>
                        <input class="form-control" asp-for="FechaInicio" disabled />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Fecha fin</label>
                        <input class="form-control" asp-for="FechaFin" disabled />
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Eliminar el periodo" />
                    </div>
</form>
        </div>

    </div>
</div>



