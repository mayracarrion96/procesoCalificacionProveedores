@using Modelo.Entidades
@model Postulacion
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>NUEVA POSTULACION</h1>
<p>Formulario para la creacion de una nueva postulacion en el sistema SCP</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear nueva postulacion</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="control-label">Estado</label>
                    <input class="form-control" asp-for="Estado" />
                </div>
                <div class="form-group">
                    <label class="control-label">Fecha</label>
                    <input class="form-control" asp-for="Fecha" />
                </div>
                <div class="form-group">
                    <label class="control-label">Proveedor</label>
                    <input class="form-control" asp-for="ProovedorId" />
                </div>
                <div class="form-group">
                    <label class="control-label">Oferta</label>
                    <input class="form-control" asp-for="OfertaId" />
                </div>
                <div class="form-group">
                    <label class="control-label">Periodo</label>
                    <input class="form-control" asp-for="PeriodoId" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Crear la postulacion" />
                </div>
            </form>
        </div>

    </div>
</div>
