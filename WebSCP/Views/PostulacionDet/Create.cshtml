@using Modelo.Entidades
@model Postulacion_Det
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>NUEVO DETALLE DE POSTULACION</h1>
<p>Formulario para la creacion de un nuevo detalle de postulacion en el sistema SCP</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear nuevo detalle postulacion</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="control-label">Id</label>
                    <input class="form-control" asp-for="Postulacion_DetId" />
                </div>
                <div class="form-group">
                    <label class="control-label">Postulacion #</label>
                    <input class="form-control" asp-for="PostulacionId" />
                </div>
                <div class="form-group">
                    <label class="control-label">Calificacion</label>
                    <input class="form-control" asp-for="Calificacion.CalificacionId" />
                </div>
                
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Crear el detalle postulacion" />
                </div>
            </form>
        </div>

    </div>
</div>
