@using Modelo.Entidades
@model Postulacion_Det
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EDICION DE DETALLE POSTULACION</h1>
<p>Formulario para editar postulacion en el sistema SCP</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Usted esta actualizando el detalle de postulacion #: @Model.Postulacion_DetId</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="Postulacion_DetId" />

               
                <div class="form-group">
                    <label class="control-label">Postulacion #</label>
                    <input class="form-control" asp-for="PostulacionId" />
                </div>
                <div class="form-group">
                    <label class="control-label">Calificacion</label>
                    <input class="form-control" asp-for="Calificacion.CalificacionId" />
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Actualizar detalle postulacion" />
                </div>
            </form>
        </div>

    </div>
</div>



