@using Modelo.Entidades;
@model Producto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>NUEVO PRODUCTO</h1>
<p>Formulario para la creacion de un nuevo producto en el sistema SCP</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear nuevo producto</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label class="control-label">Nombre</label>
                    <input class="form-control" asp-for="Nombre" />
                </div>
                <div class="form-group">
                    <label class="control-label">Unidad</label>
                    <input class="form-control" asp-for="Unidad" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Crear el producto" />
                </div>
            </form>
        </div>

    </div>
</div>

