@using Modelo.Entidades
@model Producto
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ELIMINAR PRODUCTO</h1>
<p>Formulario para borrar un producto en el sistema SCP</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Seguro que desea eliminar el producto: @Model.Nombre</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Delete">
                <div class="form-group">

                    <input type="hidden" asp-for="ProductoId" />

                    <label class="control-label">Nombre</label>
                    <input class="form-control" asp-for="Nombre" disabled />
                </div>
                <div class="form-group">
                    <label class="control-label">Unidad</label>
                    <input class="form-control" asp-for="Unidad" disabled/>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Eliminar el producto" />
                </div>
            </form>
        </div>

    </div>
</div>

