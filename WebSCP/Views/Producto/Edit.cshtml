@using Modelo.Entidades
@model Producto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EDICION DE PRODUCTOS</h1>
<p>Formulario para editar el producto en el sistema SCP</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Usted esta actualizando el producto: @Model.Nombre</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="ProductoId" />

                <div class="form-group">
                    <label class="control-label">Nombre</label>
                    <input class="form-control" asp-for="Nombre" />
                </div>
                <div class="form-group">
                    <label class="control-label">Unidad</label>
                    <input class="form-control" asp-for="Unidad" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Actualizar el producto" />
                </div>
            </form>
        </div>

    </div>
</div>


