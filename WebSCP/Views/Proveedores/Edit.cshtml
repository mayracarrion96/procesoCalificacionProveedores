@using Modelo.Entidades
@model Proveedor
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EDICION DE PROVEEDORES</h1>
<p>Formulario para editar el proveedor en el sistema SCP</p>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Usted esta actualizando el proveedor: @Model.Nombre</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Edit">

                <input type="hidden" asp-for="ProveedorId" />

                <div class="form-group">
                    <label class="control-label">Nombre</label>
                    <input class="form-control" asp-for="Nombre" />
                </div>
                <div class="form-group">
                    <label class="control-label">RUC</label>
                    <input class="form-control" asp-for="Ruc" />
                </div>
                <div class="form-group">
                    <label class="control-label">Direccion</label>
                    <input class="form-control" asp-for="Direccion" />
                </div>
                <div class="form-group">
                    <label class="control-label">Telefono</label>
                    <input class="form-control" asp-for="Telefono" />
                </div>
                <div class="form-group">
                    <label class="control-label">Email</label>
                    <input class="form-control" asp-for="Correo" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Actualizar el proveedor" />
                </div>
            </form>
        </div>

    </div>
</div>



