@using Modelo.Entidades;
@model IEnumerable<Proveedor>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>PROVEEDORES</h1>
<p>Se presenta a continuación la lista de las proveedores registradas en el sistema SCP</p>

<div class="container">
    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true">
                    &times;
                </span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-8">
            <h3>Lista de proveedores</h3>
        </div>
        <div class="col-sm-4">
            <a class="btn btn-success d-block"
               asp-controller="Proveedores" asp-action="Create">
                Crear nuevo proveedor
            </a>
        </div>
    </div>

    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Nombre</td>
                    <td>RUC</td>
                    <td>Direccion</td>
                    <td>Telefono</td>
                    <td>Email</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Proveedor proveedor in Model)
                {
                <tr>
                    <td>@proveedor.ProveedorId</td>
                    <td>@proveedor.Nombre</td>
                    <td>@proveedor.Ruc</td>
                    <td>@proveedor.Direccion</td>
                    <td>@proveedor.Telefono</td>
                    <td>@proveedor.Correo</td>
                    <td>
                        <a class="btn btn-warning"
                           asp-controller="Proveedores" asp-action="Edit" asp-route-id="@proveedor.ProveedorId">
                            Editar
                        </a>
                        <a class="btn btn-danger"
                           asp-controller="Proveedores" asp-action="Delete" asp-route-id="@proveedor.ProveedorId">
                            Borrar
                        </a>
                    </td>
                </tr>
                }

            </tbody>
        </table>

    </div>
</div>


